<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">

    <title>CarCool Ride Share</title>

    <!-- Custom styles for this template -->
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:700,900" rel="stylesheet">

</head>

<body>
    <!-- views/rides-index.handlebars -->
    <h1>Find your ride!</h1>
    <div class="jumbotron">
        {{#each rides}}
            <h1 class="display-4">{{this.route}}</h1>
            <h2 class="lead">{{this.time}}</h2>
            <h2 class="lead">{{this.description}}</h2>
            <hr class="my-4">

            <p class="lead">
                <a class="btn btn-primary btn-lg" href="/rides/view/{{this._id}}" role="button">View Details</a>
        {{/each}}
        </p>
    </div>


    <footer class="ride-footer">

        <a href="#">Back to top</a>
        </p>
    </footer>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->

</body>

</html>
