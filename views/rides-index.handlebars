<!doctype html>
<html lang="en">

<head>

    <title>CarCool Ride Share</title>

    <!-- Custom styles for this template -->
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:700,900" rel="stylesheet">

</head>

<body>
    <!-- views/rides-index.handlebars -->
    <h1 class="splash">Find your ride!</h1>
    <div class="rides">
        {{#each rides}}
        <a href="/rides/view/{{this._id}}" class="link"><div class='ride'>
            <h1 class="display-4">{{this.start}} To {{this.finish}}</h1>
            <h3 class="time">{{this.time}}</h3>
            <h3 class="desc">{{this.description}}</h3>
            {{#if this.hasDriver}}
                <h2 class="offered">Passengers Needed</h2>
            {{else}}
                <h2 class="wanted">Driver Needed</h2>
            {{/if}}
        </div></a>
        {{/each}}
    </div>

    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
      </ul>
    </nav>


    <footer class="ride-footer">

        <a href="#">Back to top</a>
    </footer>



</body>

</html>
